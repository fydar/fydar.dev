@layout DefaultLayout
@page "/portfolio/technicalart"

<HeadContent>
    @{
        var openGraphModel = new OpenGraphModel()
        {
            Title = "Technical Art - Fydar",
            Description = "A collection of technical art pieces I've developed.",
            CanonicalUrl = "https://fydar.dev/portfolio/technicalart",
            Properties = [
                new OpenGraphModelImage()
                {
                    Url = "https://fydar.dev/media/header.webp",
                    Alt = "A portrait of Fydar in an anime art style."
                }
            ]
        };
        var linkData = new LinkData()
        {
            new LinkDataBreadcrumbList()
            {
                new LinkDataBreadcrumbListItem()
                {
                    Name = "Portfolio",
                    Item = "https://fydar.dev/portfolio/"
                },
                new LinkDataBreadcrumbListItem()
                {
                    Name = "Technical Art",
                    Item = "https://fydar.dev/portfolio/technicalart"
                }
            }
        };
    }
    <OpenGraphComponent Model="@openGraphModel" />
    <LinkDataComponent Model="@linkData" />
</HeadContent>


<HeadingScope>
    <aside>
        <section style="position: sticky; top: 64px;">
            <div style="height: 5rem"></div>
            <TableOfContents />
        </section>

    </aside>

    <section class="container">

        <Heading Level="2" Identifier="professional">
            <Text>Professional</Text>
            <Content>
                <CoverGrid>

                    <Cover_Phasmophobia />
                    <Cover_UNO />

                </CoverGrid>

                <div style="height: 24px"></div>

                <CardGrid Size="md">
                    <Card href="https://www.gamesindustry.biz/technical-art-roles-what-they-are-and-how-to-get-one">
                        <FeaturedImage>
                            <picture>
                                <img loading="lazy" width="640" height="480" class="card-image" src="@Assets["media/companies/radicalforge/egx-card.webp"]" alt="Preview of the EGX talk." />
                            </picture>
                        </FeaturedImage>
                        <ChildContent>
                            <div class="card-container">
                                <div class="row">
                                    <SvgSprite class="card-keyicon" Link="/icons.svg?v=1#tabler--brush" />
                                    <div class="column">
                                        <h3 class="card-header">EGX 2023 Panellist</h3>
                                    </div>
                                </div>
                                <div class="row">
                                    <p class="card-description">Technical art roles: What they are, and how to get one</p>
                                </div>
                            </div>
                        </ChildContent>
                    </Card>
                </CardGrid>

            </Content>
        </Heading>

    </section>
</HeadingScope>
